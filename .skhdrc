# Navigation
alt - h : /bin/sh -c 'yabai -m window --focus west'
alt - j : /bin/sh -c 'yabai -m window --focus south'
alt - k : /bin/sh -c 'yabai -m window --focus north'
alt - l : /bin/sh -c 'yabai -m window --focus east'
alt - s: /bin/sh -c 'yabai -m display --focus west'
alt - g: /bin/sh -c 'yabai -m display --focus east'

# Moving windows
shift + alt - h : /bin/sh -c 'yabai -m window --warp west'
shift + alt - j : /bin/sh -c 'yabai -m window --warp south'
shift + alt - k : /bin/sh -c 'yabai -m window --warp north'
shift + alt - l : /bin/sh -c 'yabai -m window --warp east'

# Move focus container to workspace
shift + alt - m : /bin/sh -c 'yabai -m window --space last; yabai -m space --focus last'
shift + alt - p : /bin/sh -c 'yabai -m window --space prev; yabai -m space --focus prev'
shift + alt - n : /bin/sh -c 'yabai -m window --space next; yabai -m space --focus next'
shift + alt - 1 : /bin/sh -c 'yabai -m window --space 1; yabai -m space --focus 1'
shift + alt - 2 : /bin/sh -c 'yabai -m window --space 2; yabai -m space --focus 2'
shift + alt - 3 : /bin/sh -c 'yabai -m window --space 3; yabai -m space --focus 3'
shift + alt - 4 : /bin/sh -c 'yabai -m window --space 4; yabai -m space --focus 4'

# Resize windows
lctrl + alt - h : /bin/sh -c 'yabai -m window --resize left:-50:0; \
                              yabai -m window --resize right:-50:0'
lctrl + alt - j : /bin/sh -c 'yabai -m window --resize bottom:0:50; \
                              yabai -m window --resize top:0:50'
lctrl + alt - k : /bin/sh -c 'yabai -m window --resize top:0:-50; \
                              yabai -m window --resize bottom:0:-50'
lctrl + alt - l : /bin/sh -c 'yabai -m window --resize right:50:0; \
                              yabai -m window --resize left:50:0'

# Equalize size of windows
lctrl + alt - e : /bin/sh -c 'yabai -m space --balance'

# Enable / Disable gaps in current workspace
lctrl + alt - g : /bin/sh -c 'yabai -m space --toggle padding; yabai -m space --toggle gap'

# Rotate windows clockwise and anticlockwise
alt - r         : /bin/sh -c 'yabai -m space --rotate 270'
shift + alt - r : /bin/sh -c 'yabai -m space --rotate 90'

# Rotate on X and Y Axis
shift + alt - x : /bin/sh -c 'yabai -m space --mirror x-axis'
shift + alt - y : /bin/sh -c 'yabai -m space --mirror y-axis'

# Set insertion point for focused container
shift + lctrl + alt - h : /bin/sh -c 'yabai -m window --insert west'
shift + lctrl + alt - j : /bin/sh -c 'yabai -m window --insert south'
shift + lctrl + alt - k : /bin/sh -c 'yabai -m window --insert north'
shift + lctrl + alt - l : /bin/sh -c 'yabai -m window --insert east'

# Float / Unfloat window
shift + alt - space : /bin/sh -c 'yabai -m window --toggle float; yabai -m window --toggle border'

# Restart Yabai
shift + lctrl + alt - r : /bin/sh -c '/usr/bin/env osascript <<< \
    "display notification \"Restarting Yabai\" with title \"Yabai\""; \
    launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"'

# Make window native fullscreen
alt - f         : /bin/sh -c 'yabai -m window --toggle zoom-fullscreen'
shift + alt - f : /bin/sh -c 'yabai -m window --toggle native-fullscreen'
